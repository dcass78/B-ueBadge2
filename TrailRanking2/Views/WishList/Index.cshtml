@model IEnumerable<TrailRanking.Models.WishListItem>

@{
    ViewBag.Title = "Index";
}
<style>
</style>
<div class="wishListBackground">
    <div class="wishListBody">
        <div class="trailWishList">
        </div>


        <h2>Trail Wish List</h2>

        <p>
            @Html.ActionLink("Create New Wish List", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.WishListId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TrailId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TrailName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedUtc)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.WishListId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TrailId)
                    </td>
                    <th>
                        @Html.DisplayNameFor(model => model.TrailName)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedUtc)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.WishListId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.WishListId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.WishListId })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
    
