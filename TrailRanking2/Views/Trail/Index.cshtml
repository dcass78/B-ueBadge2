@model IEnumerable<TrailRanking.Models.TrailListItem>

@{
    ViewBag.Title = "Index";
}

<style>
</style>
<div class="background">
    <div class="trailBody">


        <h2>Trail</h2>

        <p>
            @Html.ActionLink("Create New Trail", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TrailId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TrailName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EquipmentId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedUtc)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TrailId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TrailName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EquipmentId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedUtc)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.TrailId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.TrailId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.TrailId })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

